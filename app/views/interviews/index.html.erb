<h1><%= @user.username %>さんの面接一覧</h1>
  <table>
    <theader>
      <tr>
        <th>面接開始時間</th><th>承認状態</th><th></th><th></th>
      </tr>
    </theader>
    <tbody>
      <% @interviews.each do |interview| %>
      <tr>
        <td>
          <%= interview.schedule.strftime("%Y年%m月%d日 %H時%M分") %>
        </td>
        <td>
          <%= interview.propriety %>
        </td>
        <td>
          <%= link_to '編集', edit_interview_path(current_user) %>
        </td>
        <td>
          <%= link_to '削除', '#' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
